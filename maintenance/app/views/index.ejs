<%- include('partials/header') %>
<main>


  <table class="incident_table table">
    <thead>
      <tr>
        <th colspan="6">
          List of Incidents
        </th>
      </tr>
      <tr>
        <th>id</th>
        <th>Attraction</th>
        <th>Nature</th>
        <th>Report Time</th>
        <th>Incident RÃ©solu</th>
        <th>Gestion</th>
      </tr>
